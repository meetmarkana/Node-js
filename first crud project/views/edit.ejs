    <input type="text" placeholder="Enter Pages" name="pages" value="<%=DatatoEdit.pages%>"><br><br><br>
    <input type="text" placeholder="Enter Price" name="price" value="<%=DatatoEdit.price%>"><br><br><br>
    <input type="text" placeholder="Enter Published Copies" name="copies" value="<%=DatatoEdit.copies%>"><br><br><br>
    <input type="submit" value="Submit" class="btn btn-success fs-6" style="height: 35px;">

   </form>
</center>
